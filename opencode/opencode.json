{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "aws": {
      "type": "local",
      "command": [
        "uvx",
        "mcp-proxy-for-aws",
        "https://aws-mcp.us-east-1.api.aws/mcp"
      ],
      "enabled": true,
      "environment": {
        "AWS_PROFILE": "{env:AWS_PROFILE}",
        "AWS_ACCESS_KEY_ID": "{env:AWS_ACCESS_KEY_ID}",
        "AWS_SECRET_ACCESS_KEY": "{env:AWS_SECRET_ACCESS_KEY}",
        "AWS_SESSION_TOKEN": "{env:AWS_SESSION_TOKEN}",
        "AWS_REGION": "{env:AWS_REGION}"
      }
    },
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "headers": {
        "CONTEXT7_API_KEY": "{file:./context7-key}"
      }
    },
    "atlassian": {
      "type": "local",
      "command": ["npx", "-y", "mcp-remote", "https://mcp.atlassian.com/v1/sse"]
    },
    "playwright": {
      "type": "local",
      "command": ["npx", "@playwright/mcp@latest", "--browser=msedge"],
      "enabled": true
    }
  },
  "tools": {
    "aws*": false,
    "context7*": true,
    "atlassian*": false,
    "playwright*": false
  },
  "agent": {
    "AWS-Build": {
      "mode": "primary",
      "tools": {
        "aws*": true
      }
    },
    "AWS-Plan": {
      "mode": "primary",
      "tools": {
        "write": false,
        "edit": false,
        "aws*": true
      }
    },
    "Playwright": {
      "mode": "primary",
      "prompt": "test with playwright* tools",
      "tools": {
        "playwright*": true
      }
    },
    "Atlassian": {
      "mode": "subagent",
      "tools": {
        "atlassian*": true
      }
    }
  }
}
